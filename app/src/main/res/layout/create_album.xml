<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:context=".Album.CreateAlbum">

    <View
        android:id="@+id/CreateAlbum_Toolbarview"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/secondaryDarkColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CreateAlbum_CloseButton"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/close"
        android:onClick="close"
        app:layout_constraintBottom_toBottomOf="@+id/CreateAlbum_Toolbarview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CreateAlbum_Toolbarview" />

    <TextView
        android:id="@+id/CreateAlbum_ToolbarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Create Album"
        android:textAlignment="textStart"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/CreateAlbum_Toolbarview"
        app:layout_constraintStart_toStartOf="@+id/CreateAlbum_Toolbarview"
        app:layout_constraintTop_toTopOf="@+id/CreateAlbum_Toolbarview" />

    <ImageView
        android:id="@+id/CreateAlbum_CoverImg"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/primaryColor"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CreateAlbum_Toolbarview" />

    <ImageButton
        android:id="@+id/CreateAlbum_AddCoverButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/add_colored"
        android:onClick="addCover"
        app:layout_constraintBottom_toBottomOf="@+id/CreateAlbum_CoverImg"
        app:layout_constraintEnd_toEndOf="@+id/CreateAlbum_CoverImg"
        app:layout_constraintStart_toStartOf="@+id/CreateAlbum_CoverImg"
        app:layout_constraintTop_toTopOf="@+id/CreateAlbum_CoverImg" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="6dp"
        android:background="@drawable/shape_custom_edittext"
        android:textColorHint="@color/primaryTextColor"
        app:hintTextAppearance="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CreateAlbum_CoverImg">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/CreateAlbum_AlbumName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:hint="Album Name"
            android:padding="6dp"
            android:singleLine="true"
            android:textColor="@color/primaryTextColor"
            android:textColorHint="@color/primaryTextColor" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:padding="6dp"
        android:background="@drawable/shape_custom_edittext"
        android:textColorHint="@color/primaryTextColor"
        app:hintTextAppearance="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout6">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/CreateAlbum_AlbumDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:hint="Album Description"
            android:padding="6dp"
            android:singleLine="true"
            android:textColor="@color/primaryTextColor"
            android:textColorHint="@color/primaryTextColor" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/CreateAlbum_CreateAlbumButton"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/shape_cutom_button"
        android:onClick="createAlbum"
        android:padding="15dp"
        android:text="create album"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7" />

</android.support.constraint.ConstraintLayout>